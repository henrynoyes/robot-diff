<?xml version="1.0"?>
<robot name="joint_limits">
  <link name="base_link"/>
  <link name="link1"/>
  <link name="link2"/>
  <link name="link3"/>

  <joint name="revolute_joint" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <limit lower="-1.57" upper="1.57" effort="100.0" velocity="2.0"/>
  </joint>

  <joint name="prismatic_joint" type="prismatic">
    <parent link="link1"/>
    <child link="link2"/>
    <limit lower="-0.5" upper="0.5"/>
  </joint>

  <joint name="fixed_joint" type="fixed">
    <parent link="link2"/>
    <child link="link3"/>
  </joint>
</robot>
